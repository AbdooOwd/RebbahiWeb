---
import Layout from '../layouts/Layout.astro';
//import Gallery from '../components/Gallery.astro';
---

<Layout title="Rebbahi Web">
	<section id="header">
		<div id="banner">
			<img src="/images/overview.jpg" alt="Overview Image" />
		</div>
	</section>
	<div id="main-content">
		<h1>Rebbahi Mohammed Web</h1>
		<p style="padding: 2vh 0;">
			<b>Rebbahi Mohammed</b> est un college situé à Hammedi près de l'APC de la commune.
			C'est une grande école qui offre plus de 25 classes à plus de 1000 élèves.
		</p>
		<div class="gallery">
			<div class="img_cont">
				<img src="/images/road_haha.jpg" alt="Road">
				<img src="/images/garden.jpg" alt="Garden">
				<img src="/images/plants.jpg" alt="Plants">
			</div>
		</div>
	</div>
</Layout>

<style>

    #header {
        color: #fff;
        padding: 10px;
    }

    #banner {
        height: 50vh;
        overflow: hidden;
        border-radius: 8px;
    }

    #banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    #main-content {
        background-color: #1d1d1d;
        height: 100%;
        padding: 3vh 8vw;
		padding-bottom: 12vh;
    }

    .gallery {
        display: inline;
    }

    .img_cont {
        display: flex;
        overflow-x: auto;
        overflow: hidden;
        white-space: nowrap;
        height: 30vh;
    }

    .img_cont img {
        border-radius: 8px;
        margin-right: 10px; /* Adjust as needed for spacing between images */
        width: 25%;
        object-fit: cover;
        object-position: center;
    }

    @media (max-width: 768px) {
        .img_cont {
            flex-wrap: wrap; /* Switch to a grid layout */
            height: auto; /* Allow the container to adjust its height based on content */
        }

        .img_cont img {
            width: 100%; /* Make images take full width in the grid layout */
            margin-right: 0; /* Remove spacing between images */
            margin-bottom: 10px; /* Add spacing between rows */
        }
    }

</style>

