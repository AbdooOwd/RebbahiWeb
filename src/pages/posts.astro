---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Annonces">
    <div class="main">
        <h1 style="text-decoration: underline;">Annonces</h1>
        <div id="main-content"></div>
        <a href="/new_post" class="new-post">Nouvelle annonce</a>
        <center>
            <p id="wip">Le syst√®me d'annonce ne marche pas encore.<br/>Revenez une autre fois!</p>
        </center>
    </div>
</Layout>

<style>
    #wip {
        font-weight: bolder;
        font-size: 2rem;
        background-color: #7e2020;
        padding: 10vh 15vw;
        border-radius: 10px;
    }

    .main {
        padding: 5vh 3vw;
    }


    .new-post {
        position: fixed;
        top: 84px;
        right: 10px;
        padding: 10px;
        background-color: #4caf50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
    }

    
    @media (max-width: 600px) {
        .new-post {
            top: 106px;
        }
    }
</style>

<script type="module">
    async function fetchPosts() {
        try {
            const response = await fetch("/api/posts");
            const data = await response.json();
            return data.posts;
        } catch (error) {
            console.error("Error fetching posts:", error);
            return [];
        }
    }

    async function renderPosts() {
        const posts = await fetchPosts();

        const postsContainer = document.getElementById("main-content");
        postsContainer.innerHTML = "";

        posts.forEach((post) => {
            const postElement = document.createElement("div");
            postElement.innerHTML = `<h2>${post.title}</h2><p>${post.content}</p>`;
            postsContainer.appendChild(postElement);
        });
    }

    // Initial rendering of posts
    renderPosts();
</script>
